<%- include('partials/header') %>

<div class="jumbotron centered">
    <div class="container">
      <i class="fas fa-envelope-open fa-6x"></i>
      <h1 class="display-3">Your Confessions</h1>
      <hr>
    <% if (confessions.length!=0){%> 
      <% for (let i=0; i< confessions.length; i++){ %> 
        <p><%= confessions[i] %> </p>
        <hr>
      <% } %> 
    <% } else { %>
        <p style="color:cornflowerblue">Doesn't look like you have any confessions yet :(</p> 
    <% } %> 
    </div>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Confession</a>
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
  </div>

<%- include('partials/footer') %>