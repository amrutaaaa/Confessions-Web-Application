<% var user = user; %>
<%- include('partials/header') %>


<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-envelope-open fa-6x"></i><br><br>
    <p class="secret-text">Hi, <%= user %>! Submitting a Confession? 😏 </p>
    <hr>
    
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Confession</a>
    
  </div>
</div>

<% var month = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
<% if (confessions.length!=0){%> 
  <% for (let i=0; i< confessions.length; i++){ %> 
    <div class="card" style="width: 40%;">
      <div class="container">
        <h4><b><%= month[dates[i].getMonth()] %> <%= dates[i].getDate() %>, <%= dates[i].getFullYear() %></b> 
          <% if (status[i]==0) { %>
            <span class="dot"></span><small style="color: #c94c4c; font-size: 0.4em; vertical-align: middle; padding-left: 0.3em;">NEW</small>
          <% } %></h4>
        <p><%= confessions[i] %> </p>
      </div>
    </div>
  <% } %> 
<% } else { %>
    <div class="card" style="width: 40%;">
      <div class="container">
        <h4 style="color: darkblue; text-align: center;">No Confessions Yet</h4>
      </div>
    </div>
<% } %> 


</body>

<%- include('partials/footer') %>
